{
  "name": "junrai-karaoke-tests",
  "version": "1.0.0",
  "description": "Test dependencies for Junrai Karaoke admin functionality",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:admin": "jest tests/admin --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "@types/jest": "^29.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}