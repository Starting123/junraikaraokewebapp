DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=
DB_NAME=junraikaraokedatabase
DB_CONN_LIMIT=10

# App
PORT=3000

# JWT / Auth
# Change JWT_SECRET to a strong random value in production
JWT_SECRET=change_this_in_production
# Token lifetime (e.g. 2h, 1d)
JWT_EXPIRES=2h

# Bcrypt rounds (optional)
BCRYPT_ROUNDS=10

# Email (optional) - used for password reset emails. If not set, the app will log tokens to the console.
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="no-reply@example.com"

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# เมื่อได้ API keys จริงจาก Stripe แล้ว ให้แทนที่ค่าด้านบน
# การขอ Stripe API Keys:
# 1. สมัครสมาชิก Stripe ที่ https://stripe.com
# 2. เข้าสู่ Dashboard
# 3. ไปที่ Developers > API Keys
# 4. คัดลอก Publishable key และ Secret key
# 5. สำหรับ Webhook secret ไปที่ Developers > Webhooks

