    <!-- Custom Payment JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const bankForm = document.getElementById('bankTransferForm');
            const stripeForm = document.getElementById('stripePaymentForm');
            const paymentMethodCards = document.querySelectorAll('.payment-method-card');
            
            // Payment method selection
            paymentMethodCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove active class from all cards
                    paymentMethodCards.forEach(c => c.classList.remove('border-primary', 'bg-light'));
                    
                    // Add active class to clicked card
                    this.classList.add('border-primary', 'bg-light');
                    
                    // Show appropriate form
                    const method = this.dataset.method;
                    if (method === 'bank') {
                        bankForm.style.display = 'block';
                        stripeForm.style.display = 'none';
                    } else if (method === 'stripe') {
                        bankForm.style.display = 'none';
                        stripeForm.style.display = 'block';
                    }
                });
            });
            
            // Bank Transfer Form Elements
            const fileInput = document.getElementById('uploadSlip');
            const previewDiv = document.getElementById('filePreview');
            const previewImage = document.getElementById('previewImage');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const submitBankBtn = document.getElementById('submitBankBtn');
            
            // Set default date to today
            const paymentDateInput = document.getElementById('paymentDate');
            if (!paymentDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                paymentDateInput.value = today;
            }
            
            // Set min and max date (30 days ago to today)
            const today = new Date();
            const thirtyDaysAgo = new Date(today.getTime() - (30 * 24 * 60 * 60 * 1000));
            
            paymentDateInput.min = thirtyDaysAgo.toISOString().split('T')[0];
            paymentDateInput.max = today.toISOString().split('T')[0];
            
            // File preview functionality
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Check file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('กรุณาอัปโหลดไฟล์รูปภาพเท่านั้น (JPG, PNG, GIF)');
                        fileInput.value = '';
                        previewDiv.style.display = 'none';
                        return;
                    }
                    
                    // Check file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('ไฟล์มีขนาดใหญ่เกินไป (ขนาดสูงสุด 5MB)');
                        fileInput.value = '';
                        previewDiv.style.display = 'none';
                        return;
                    }
                    
                    // Show preview
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImage.src = e.target.result;
                        fileName.textContent = file.name;
                        fileSize.textContent = `(${(file.size / 1024 / 1024).toFixed(2)} MB)`;
                        previewDiv.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    previewDiv.style.display = 'none';
                }
            });
            
            // Bank Transfer Form validation
            if (bankForm) {
                bankForm.addEventListener('submit', function(e) {
                    if (!bankForm.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    
                    bankForm.classList.add('was-validated');
                    
                    // Show loading state
                    if (bankForm.checkValidity()) {
                        submitBankBtn.disabled = true;
                        submitBankBtn.innerHTML = '<i class="spinner-border spinner-border-sm me-1"></i>กำลังประมวลผล...';
                    }
                });
            }

            // Stripe Form handling
            const stripeFormElement = document.getElementById('stripeForm');
            const submitStripeBtn = document.getElementById('submitStripeBtn');
            
            if (stripeFormElement) {
                stripeFormElement.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    if (!stripeFormElement.checkValidity()) {
                        stripeFormElement.classList.add('was-validated');
                        return;
                    }

                    const payerName = document.getElementById('stripePayerName').value;
                    const amount = document.getElementById('stripeAmount').value;
                    const bookingId = '<%= bookingId %>';

                    // Show loading state
                    submitStripeBtn.disabled = true;
                    submitStripeBtn.innerHTML = '<i class="spinner-border spinner-border-sm me-1"></i>กำลังสร้างการชำระ...';

                    try {
                        // Create Stripe Checkout Session
                        const response = await fetch('/payment/create-stripe-session', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                amount: amount,
                                payerName: payerName,
                                bookingId: bookingId
                            })
                        });

                        const data = await response.json();

                        if (data.url) {
                            // Redirect to Stripe Checkout
                            window.location.href = data.url;
                        } else {
                            throw new Error(data.error || 'เกิดข้อผิดพลาดในการสร้างการชำระเงิน');
                        }
                    } catch (error) {
                        console.error('Stripe payment error:', error);
                        alert('เกิดข้อผิดพลาด: ' + error.message);
                        
                        // Reset button
                        submitStripeBtn.disabled = false;
                        submitStripeBtn.innerHTML = '<i class="bi bi-credit-card me-1"></i>ชำระด้วยบัตรเครดิต';
                    }
                });
            }
            
            // Format amount input
            const amountInput = document.getElementById('amount');
            amountInput.addEventListener('input', function(e) {
                let value = parseFloat(e.target.value);
                if (isNaN(value) || value < 0) {
                    e.target.setCustomValidity('กรุณากรอกยอดเงินที่ถูกต้อง');
                } else {
                    e.target.setCustomValidity('');
                }
            });
            
            // Name validation (Thai and English only)
            const nameInput = document.getElementById('payerName');
            nameInput.addEventListener('input', function(e) {
                const thaiEnglishPattern = /^[ก-๙a-zA-Z\s]+$/;
                if (!thaiEnglishPattern.test(e.target.value) && e.target.value !== '') {
                    e.target.setCustomValidity('ชื่อผู้ชำระต้องเป็นภาษาไทยหรืออังกฤษเท่านั้น');
                } else {
                    e.target.setCustomValidity('');
                }
            });
        });
    </script>
