            <!-- Contact Form -->
            <div class="contact-form-section">
                <h2>ส่งข้อความถึงเรา</h2>
                
                <!-- Success Message -->
                <div id="contact-success" class="alert alert-success" style="display: none;">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <h4>ส่งข้อความสำเร็จ!</h4>
                        <p>เราได้รับข้อความของคุณแล้ว และจะติดต่อกลับโดยเร็วที่สุด</p>
                    </div>
                </div>
                
                <!-- Error Message -->
                <div id="contact-error" class="alert alert-error" style="display: none;">
                    <i class="fas fa-exclamation-triangle"></i>
                    <div>
                        <h4>เกิดข้อผิดพลาด</h4>
                        <p id="contact-error-message">ไม่สามารถส่งข้อความได้ กรุณาลองใหม่อีกครั้ง</p>
                    </div>
                </div>
                
                <form id="contact-form" class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="contact-name">ชื่อ-นามสกุล *</label>
                            <input type="text" id="contact-name" name="name" class="form-control" required>
                            <div class="form-error" id="name-error"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="contact-email">อีเมล *</label>
                            <input type="email" id="contact-email" name="email" class="form-control" required>
                            <div class="form-error" id="email-error"></div>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="contact-phone">เบอร์โทรศัพท์</label>
                            <input type="tel" id="contact-phone" name="phone" class="form-control">
                            <div class="form-error" id="phone-error"></div>
                        </div>
                        
                        <div class="form-group">
                            <label for="contact-subject">หัวข้อ *</label>
                            <select id="contact-subject" name="subject" class="form-control" required>
                                <option value="">เลือกหัวข้อ...</option>
                                <option value="booking">สอบถามการจอง</option>
                                <option value="payment">ปัญหาการชำระเงิน</option>
                                <option value="complaint">ข้อร้องเรียน</option>
                                <option value="suggestion">ข้อเสนอแนะ</option>
                                <option value="other">อื่นๆ</option>
                            </select>
                            <div class="form-error" id="subject-error"></div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="contact-message">ข้อความ *</label>
                        <textarea id="contact-message" name="message" class="form-control" rows="6" 
                                placeholder="โปรดระบุรายละเอียดที่ต้องการสอบถาม..." required></textarea>
                        <div class="form-error" id="message-error"></div>
                    </div>
                    
                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="contact-privacy" name="privacy" required>
                            <span class="checkmark"></span>
                            ฉันยอมรับ <a href="/privacy" target="_blank">นโยบายความเป็นส่วนตัว</a> และ <a href="/terms" target="_blank">ข้อกำหนดการใช้งาน</a>
                        </label>
                        <div class="form-error" id="privacy-error"></div>
                    </div>
                    
                    <div class="form-actions">
                        <button type="button" class="btn btn-outline" id="contact-clear-btn">ล้างข้อมูล</button>
                        <button type="submit" class="btn btn-primary" id="contact-submit-btn">
                            <span class="btn-text">ส่งข้อความ</span>
                            <span class="btn-loading" style="display: none;">
                                <i class="fas fa-spinner fa-spin"></i>
                                กำลังส่ง...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

