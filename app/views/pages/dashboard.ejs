<!-- Page Header -->
<div class="page-header dashboard-header">
    <div class="container">
        <div class="page-header-content">
            <div class="dashboard-welcome">
                <h1>แดชบอร์ด</h1>
                <p id="welcome-message">ยินดีต้อนรับ!</p>
            </div>
            <div class="dashboard-actions">
                <a href="/rooms" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    จองใหม่
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<section class="dashboard-stats">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="pending-bookings">-</div>
                    <div class="stat-label">การจองที่รอยืนยัน</div>
                </div>
                <a href="/bookings?status=pending" class="stat-link">ดูรายละเอียด</a>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon confirmed">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="confirmed-bookings">-</div>
                    <div class="stat-label">การจองที่ยืนยันแล้ว</div>
                </div>
                <a href="/bookings?status=confirmed" class="stat-link">ดูรายละเอียด</a>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon completed">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="completed-bookings">-</div>
                    <div class="stat-label">การจองที่เสร็จสิ้น</div>
                </div>
                <a href="/bookings?status=completed" class="stat-link">ดูรายละเอียด</a>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon total">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="total-bookings">-</div>
                    <div class="stat-label">การจองทั้งหมด</div>
                </div>
                <a href="/bookings" class="stat-link">ดูทั้งหมด</a>
            </div>
        </div>
    </div>
</section>

<!-- Dashboard Content -->
<section class="dashboard-content">
    <div class="container">
        <div class="dashboard-grid">
            <!-- Recent Bookings -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>การจองล่าสุด</h3>
                    <a href="/bookings" class="view-all-link">ดูทั้งหมด</a>
                </div>
                
                <div class="card-content">
                    <!-- Loading State -->
                    <div id="recent-bookings-loading" class="loading-state">
                        <div class="loading-spinner small"></div>
                        <p>กำลังโหลด...</p>
                    </div>
                    
                    <!-- Empty State -->
                    <div id="recent-bookings-empty" class="empty-state small" style="display: none;">
                        <div class="empty-icon">
                            <i class="fas fa-calendar-times"></i>
                        </div>
                        <h4>ยังไม่มีการจอง</h4>
                        <p>เริ่มต้นจองห้องคาราโอเกะเลย!</p>
                        <a href="/rooms" class="btn btn-primary btn-small">จองเลย</a>
                    </div>
                    
                    <!-- Bookings List -->
                    <div id="recent-bookings-list" class="recent-bookings-list" style="display: none;">
                        <!-- Recent booking items will be populated here -->
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>การดำเนินการด่วน</h3>
                </div>
                
                <div class="card-content">
                    <div class="quick-actions">
                        <a href="/rooms" class="quick-action-item">
                            <div class="action-icon">
                                <i class="fas fa-plus-circle"></i>
                            </div>
                            <div class="action-content">
                                <h4>จองห้องใหม่</h4>
                                <p>เลือกห้องและวันเวลาที่ต้องการ</p>
                            </div>
                        </a>
                        
                        <a href="/bookings" class="quick-action-item">
                            <div class="action-icon">
                                <i class="fas fa-list"></i>
                            </div>
                            <div class="action-content">
                                <h4>ดูการจองทั้งหมด</h4>
                                <p>จัดการและติดตามสถานะการจอง</p>
                            </div>
                        </a>
                        
                        <button class="quick-action-item" id="update-profile-btn">
                            <div class="action-icon">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <div class="action-content">
                                <h4>แก้ไขโปรไฟล์</h4>
                                <p>อัปเดตข้อมูลส่วนตัว</p>
                            </div>
                        </button>
                        
                        <a href="/contact" class="quick-action-item">
                            <div class="action-icon">
                                <i class="fas fa-headset"></i>
                            </div>
                            <div class="action-content">
                                <h4>ติดต่อเรา</h4>
                                <p>สอบถามข้อมูลหรือปัญหาการใช้งาน</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Profile Section -->
        <div class="dashboard-profile-section">
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>ข้อมูลส่วนตัว</h3>
                    <button class="btn btn-outline btn-small" id="edit-profile-btn">แก้ไข</button>
                </div>
                
                <div class="card-content">
                    <div id="profile-view" class="profile-view">
                        <div class="profile-info-grid">
                            <div class="profile-info-item">
                                <label>ชื่อ-นามสกุล</label>
                                <span id="profile-name">-</span>
                            </div>
                            
                            <div class="profile-info-item">
                                <label>อีเมล</label>
                                <span id="profile-email">-</span>
                            </div>
                            
                            <div class="profile-info-item">
                                <label>เบอร์โทรศัพท์</label>
                                <span id="profile-phone">-</span>
                            </div>
                            
                            <div class="profile-info-item">
                                <label>สมาชิกตั้งแต่</label>
                                <span id="profile-member-since">-</span>
                            </div>
                        </div>
                    </div>
                    
                    <div id="profile-edit" class="profile-edit" style="display: none;">
                        <form id="profile-form">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="profile-firstname">ชื่อ</label>
                                    <input type="text" id="profile-firstname" name="firstname" class="form-control" required>
                                    <div class="form-error" id="profile-firstname-error"></div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="profile-lastname">นามสกุล</label>
                                    <input type="text" id="profile-lastname" name="lastname" class="form-control" required>
                                    <div class="form-error" id="profile-lastname-error"></div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="profile-phone-edit">เบอร์โทรศัพท์</label>
                                <input type="tel" id="profile-phone-edit" name="phone" class="form-control" required>
                                <div class="form-error" id="profile-phone-edit-error"></div>
                            </div>
                            
                            <div class="form-actions">
                                <button type="button" class="btn btn-outline" id="cancel-profile-edit">ยกเลิก</button>
                                <button type="submit" class="btn btn-primary" id="save-profile-btn">
                                    <span class="btn-text">บันทึก</span>
                                    <span class="btn-loading" style="display: none;">
                                        <i class="fas fa-spinner fa-spin"></i>
                                        กำลังบันทึก...
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Bookings Alert -->
<div id="upcoming-bookings-alert" class="alert-banner" style="display: none;">
    <div class="container">
        <div class="alert-content">
            <div class="alert-icon">
                <i class="fas fa-bell"></i>
            </div>
            <div class="alert-text">
                <strong>แจ้งเตือน:</strong> คุณมีการจองที่จะมาถึงในอีก <span id="upcoming-time"></span>
            </div>
            <div class="alert-actions">
                <button class="btn btn-outline btn-small" id="view-upcoming-booking">ดูรายละเอียด</button>
                <button class="alert-close" id="close-upcoming-alert">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>