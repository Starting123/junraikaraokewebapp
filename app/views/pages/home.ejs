<!-- JavaScript for dynamic content -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Refresh room stats every 30 seconds
    function refreshRoomStats() {
        fetch('/api/rooms/stats')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('totalRooms').textContent = data.stats.total_rooms;
                    document.getElementById('availableRooms').textContent = data.stats.available_rooms;
                    document.getElementById('occupiedRooms').textContent = data.stats.occupied_rooms;
                }
            })
            .catch(error => console.error('Error refreshing stats:', error));
    }
    
    // Initial load and periodic refresh
    setTimeout(refreshRoomStats, 5000); // First refresh after 5 seconds
    setInterval(refreshRoomStats, 30000); // Then every 30 seconds
});
</script>