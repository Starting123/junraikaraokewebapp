<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="container">
            <div class="hero-text">
                <h1 class="hero-title">
                    Welcome to <span class="brand-highlight">Junrai Karaoke</span>
                </h1>
                <p class="hero-description">
                    Experience premium karaoke entertainment with state-of-the-art sound systems, 
                    comfortable private rooms, and an extensive song library in multiple languages.
                </p>
                <div class="hero-actions">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <a href="/rooms" class="btn btn-primary btn-large">
                            <i class="fas fa-music"></i>
                            Book a Room
                        </a>
                        <a href="/bookings" class="btn btn-outline btn-large">
                            <i class="fas fa-calendar-alt"></i>
                            My Bookings
                        </a>
                    <% } else { %>
                        <a href="/register" class="btn btn-primary btn-large">
                            <i class="fas fa-user-plus"></i>
                            Get Started
                        </a>
                        <a href="/rooms" class="btn btn-outline btn-large">
                            <i class="fas fa-eye"></i>
                            View Rooms
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="hero-image">
                <img src="/assets/images/hero-karaoke.jpg" alt="Karaoke Room" class="hero-img">
            </div>
        </div>
    </div>
    
    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number" id="totalRooms">
                        <%= typeof roomStats !== 'undefined' ? roomStats.total_rooms : '0' %>
                    </div>
                    <div class="stat-label">Total Rooms</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number available" id="availableRooms">
                        <%= typeof roomStats !== 'undefined' ? roomStats.available_rooms : '0' %>
                    </div>
                    <div class="stat-label">Available Now</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number occupied" id="occupiedRooms">
                        <%= typeof roomStats !== 'undefined' ? roomStats.occupied_rooms : '0' %>
                    </div>
                    <div class="stat-label">Currently Occupied</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Operating Hours</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Rooms Section -->
<section class="featured-rooms">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Rooms</h2>
            <p class="section-description">
                Discover our most popular karaoke rooms with premium amenities
            </p>
        </div>
        
        <div class="rooms-grid" id="featuredRoomsGrid">
            <% if (typeof featuredRooms !== 'undefined' && featuredRooms.length > 0) { %>
                <% featuredRooms.forEach(function(room) { %>
                    <div class="room-card">
                        <div class="room-image">
                            <img src="/assets/images/rooms/room-<%= room.room_id %>.jpg" 
                                 alt="<%= room.name %>" 
                                 onerror="this.src='/assets/images/rooms/default-room.jpg'">
                            <div class="room-status <%= room.status %>">
                                <i class="fas fa-circle"></i>
                                <%= room.status.charAt(0).toUpperCase() + room.status.slice(1) %>
                            </div>
                        </div>
                        <div class="room-content">
                            <h3 class="room-name"><%= room.name %></h3>
                            <div class="room-info">
                                <div class="room-detail">
                                    <i class="fas fa-users"></i>
                                    <span>Up to <%= room.capacity %> people</span>
                                </div>
                                <div class="room-detail">
                                    <i class="fas fa-tag"></i>
                                    <span><%= room.type_name %></span>
                                </div>
                            </div>
                            <div class="room-price">
                                <span class="price">â‚¿<%= room.price_per_hour %></span>
                                <span class="period">per hour</span>
                            </div>
                            <div class="room-actions">
                                <a href="/rooms/<%= room.room_id %>" class="btn btn-outline btn-small">
                                    View Details
                                </a>
                                <% if (room.status === 'available') { %>
                                    <a href="/rooms/<%= room.room_id %>/book" class="btn btn-primary btn-small">
                                        Book Now
                                    </a>
                                <% } else { %>
                                    <button class="btn btn-disabled btn-small" disabled>
                                        Unavailable
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-rooms-message">
                    <i class="fas fa-music"></i>
                    <h3>No Featured Rooms Available</h3>
                    <p>Please check back later or browse all rooms.</p>
                    <a href="/rooms" class="btn btn-primary">View All Rooms</a>
                </div>
            <% } %>
        </div>
        
        <div class="section-actions">
            <a href="/rooms" class="btn btn-primary">
                <i class="fas fa-list"></i>
                View All Rooms
            </a>
        </div>
    </div>
</section>

