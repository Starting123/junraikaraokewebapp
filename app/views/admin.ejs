        <!-- Main Content Area -->
        <main class="admin-content-wrapper">
            <!-- Breadcrumb Navigation -->
            <nav class="breadcrumb" id="adminBreadcrumb">
                <span class="breadcrumb-item">
                    <i class="fas fa-home"></i> หน้าหลัก
                </span>
                <span class="breadcrumb-separator">/</span>
                <span class="breadcrumb-item active" id="currentSection">แดชบอร์ด</span>
            </nav>

            <!-- Dashboard Section -->
            <section id="dashboard-section" class="admin-section active">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-tachometer-alt"></i>
                        แดชบอร์ดผู้ดูแลระบบ
                    </h1>
                    <p id="welcomeMessage">ยินดีต้อนรับผู้ดูแลระบบ</p>
                </div>

                <!-- System Statistics -->
                <div class="dashboard-stats">
                    <h2>
                        <i class="fas fa-chart-line"></i>
                        สรุประบบ
                    </h2>
                    <p>ภาพรวมการใช้งานระบบ</p>
                </div>
            
            <div class="stats-grid">
                <div class="stat-card total-users">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalUsers">-</h3>
                        <p>ผู้ใช้ทั้งหมด</p>
                        <small class="stat-change" id="usersChange">+0 ใหม่วันนี้</small>
                    </div>
                </div>
                
                <div class="stat-card total-rooms">
                    <div class="stat-icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalRooms">-</h3>
                        <p>ห้องทั้งหมด</p>
                        <small class="stat-change" id="roomsAvailable">0 ห้องว่าง</small>
                    </div>
                </div>
                
                <div class="stat-card total-bookings">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalBookings">-</h3>
                        <p>การจองวันนี้</p>
                        <small class="stat-change" id="bookingsChange">+0 ใหม่วันนี้</small>
                    </div>
                </div>
                
                <div class="stat-card total-revenue">
                    <div class="stat-icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalRevenue">-</h3>
                        <p>รายได้วันนี้</p>
                        <small class="stat-change" id="revenueChange">฿0 เพิ่มขึ้น</small>
                    </div>
                </div>
            </div>

            <!-- Admin Actions -->
            <div class="section-header">
                <h2>เมนูจัดการ</h2>
                <p>เลือกการดำเนินการที่ต้องการ</p>
            </div>
            
            <div class="actions-grid row g-4 mb-5">
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" data-section="rooms">
                        <div class="action-card-icon">
                            <i class="fas fa-door-open"></i>
                        </div>
                        <h4>จัดการห้อง</h4>
                        <p>เพิ่ม แก้ไข หรือลบห้องคาราโอเกะ</p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" data-section="bookings">
                        <div class="action-card-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h4>จัดการการจอง</h4>
                        <p>ดูและจัดการการจองทั้งหมด</p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" data-section="menu">
                        <div class="action-card-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h4>จัดการเมนูอาหาร</h4>
                        <p>เพิ่ม แก้ไข ราคาอาหารและเครื่องดื่ม</p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" data-section="users">
                        <div class="action-card-icon">
                            <i class="fas fa-users-cog"></i>
                        </div>
                        <h4>จัดการผู้ใช้</h4>
                        <p>ดูและจัดการข้อมูลผู้ใช้</p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" data-section="reports">
                        <div class="action-card-icon">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <h4>รายงาน</h4>
                        <p>ดูรายงานการใช้งานและรายได้</p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="action-card" onclick="window.location.href='/dashboard'">
                        <div class="action-card-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <h4>กลับหน้าลูกค้า</h4>
                        <p>เข้าสู่หน้าลูกค้าทั่วไป</p>
                    </div>
                </div>
            </div>

            <!-- Management Sections (Initially Hidden) -->
            
            <!-- Manage Rooms Section -->
            <div class="management-section" id="manageRooms" style="display: none;">
                <div class="section-header">
                    <h2>จัดการห้อง</h2>
                    <button class="btn btn-primary" onclick="showAddRoomForm()">
                        <i class="fas fa-plus"></i>
                        เพิ่มห้องใหม่
                    </button>
                </div>
                
                <div class="table-container">
                    <table class="admin-table" id="roomsTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>ชื่อห้อง</th>
                                <th>ความจุ</th>
                                <th>ราคา/ชม.</th>
                                <th>สถานะ</th>
                                <th>การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody id="roomsTableBody">
                            <tr>
                                <td colspan="6" class="text-center">
                                    <div class="loading">
                                        <div class="spinner"></div>
                                        <p>กำลังโหลดข้อมูล...</p>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Manage Menu Section -->
            <div class="management-section" id="manageMenu" style="display: none;">
                <div class="section-header">
                    <h2>จัดการเมนูอาหาร</h2>
                    <button class="btn btn-primary" onclick="showAddMenuForm()">
                        <i class="fas fa-plus"></i>
                        เพิ่มรายการใหม่
                    </button>
                </div>
                
                <div class="menu-tabs">
                    <button class="tab-button active" onclick="showMenuItems()">
                        <i class="fas fa-utensils"></i>
                        รายการอาหาร
                    </button>
                    <button class="tab-button" onclick="showMenuCategories()">
                        <i class="fas fa-tags"></i>
                        หมวดหมู่
                    </button>
                </div>
                
                <!-- Menu Items Tab -->
                <div class="tab-content active" id="menuItemsTab">
                    <div class="table-container">
                        <table class="admin-table" id="menuTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>ชื่อรายการ</th>
                                    <th>หมวดหมู่</th>
                                    <th>ราคา</th>
                                    <th>สถานะ</th>
                                    <th>การจัดการ</th>
                                </tr>
                            </thead>
                            <tbody id="menuTableBody">
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="loading">
                                            <div class="spinner"></div>
                                            <p>กำลังโหลดข้อมูล...</p>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Categories Tab -->
                <div class="tab-content" id="categoriesTab" style="display: none;">
                    <div class="category-actions">
                        <button class="btn btn-primary" onclick="showAddCategoryForm()">
                            <i class="fas fa-plus"></i>
                            เพิ่มหมวดหมู่ใหม่
                        </button>
                    </div>
                    <div class="categories-grid" id="categoriesGrid">
                        <div class="loading">
                            <div class="spinner"></div>
                            <p>กำลังโหลดข้อมูล...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Manage Bookings Section -->
            <div class="management-section" id="manageBookings" style="display: none;">
                <div class="section-header">
                    <h2>จัดการการจอง</h2>
                    <div class="filter-controls">
                        <select id="bookingStatusFilter">
                            <option value="">ทุกสถานะ</option>
                            <option value="pending">รอยืนยัน</option>
                            <option value="confirmed">ยืนยันแล้ว</option>
                            <option value="cancelled">ยกเลิกแล้ว</option>
                            <option value="completed">เสร็จสิ้น</option>
                        </select>
                        <input type="date" id="bookingDateFilter">
                        <button class="btn btn-outline" onclick="filterBookings()">
                            <i class="fas fa-filter"></i>
                            กรอง
                        </button>
                    </div>
                </div>
                
                <div class="table-container">
                    <table class="admin-table" id="bookingsTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>ลูกค้า</th>
                                <th>ห้อง</th>
                                <th>วันที่</th>
                                <th>เวลา</th>
                                <th>สถานะ</th>
                                <th>การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody id="bookingsTableBody">
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div class="loading">
                                        <div class="spinner"></div>
                                        <p>กำลังโหลดข้อมูล...</p>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Manage Users Section -->
            <div class="management-section" id="manageUsers" style="display: none;">
                <div class="section-header">
                    <h2>จัดการผู้ใช้</h2>
                    <div class="filter-controls">
                        <select id="userRoleFilter">
                            <option value="">ทุกประเภท</option>
                            <option value="1">ผู้ดูแลระบบ</option>
                            <option value="2">พนักงาน</option>
                            <option value="3">ลูกค้า</option>
                        </select>
                        <input type="text" id="userSearchInput" placeholder="ค้นหาชื่อหรืออีเมล">
                        <button class="btn btn-outline" onclick="filterUsers()">
                            <i class="fas fa-search"></i>
                            ค้นหา
                        </button>
                    </div>
                </div>
                
                <div class="table-container">
                    <table class="admin-table" id="usersTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>ชื่อ</th>
                                <th>อีเมล</th>
                                <th>ประเภท</th>
                                <th>วันที่สมัคร</th>
                                <th>การจัดการ</th>
                            </tr>
                        </thead>
                        <tbody id="usersTableBody">
                            <tr>
                                <td colspan="6" class="text-center">
                                    <div class="loading">
                                        <div class="spinner"></div>
                                        <p>กำลังโหลดข้อมูล...</p>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Reports Section -->
            <div class="management-section" id="reports" style="display: none;">
                <div class="section-header">
                    <h2>รายงาน</h2>
                    <p>ดูรายงานการใช้งานและรายได้</p>
                </div>
                
                <div class="reports-grid">
                    <div class="report-card">
                        <h3>รายได้รายเดือน</h3>
                        <div class="report-chart" id="monthlyRevenueChart">
                            <div class="chart-placeholder">
                                <i class="fas fa-chart-line"></i>
                                <p>กราฟรายได้รายเดือน</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="report-card">
                        <h3>การจองยอดนิยม</h3>
                        <div class="report-chart" id="popularRoomsChart">
                            <div class="chart-placeholder">
                                <i class="fas fa-chart-pie"></i>
                                <p>กราฟห้องยอดนิยม</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Users Management Section -->
            <section id="users-section" class="admin-section" style="display: none;">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-users"></i>
                        จัดการผู้ใช้
                    </h1>
                    <button class="btn btn-primary" id="addUserBtn">
                        <i class="fas fa-plus"></i>
                        เพิ่มผู้ใช้ใหม่
                    </button>
                </div>
                
                <div class="content-area">
                    <div id="users-content">
                        <!-- Users content will be loaded here -->
                        <div class="loading-placeholder">
                            <i class="fas fa-spinner fa-spin"></i>
                            <p>กำลังโหลดข้อมูลผู้ใช้...</p>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Rooms Management Section -->
            <section id="rooms-section" class="admin-section" style="display: none;">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-door-open"></i>
                        จัดการห้อง
                    </h1>
                    <button class="btn btn-primary" id="addRoomBtn">
                        <i class="fas fa-plus"></i>
                        เพิ่มห้องใหม่
                    </button>
                </div>
                
                <div class="content-area">
                    <div id="rooms-content">
                        <!-- Rooms content will be loaded here -->
                        <div class="loading-placeholder">
                            <i class="fas fa-spinner fa-spin"></i>
                            <p>กำลังโหลดข้อมูลห้อง...</p>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Menu Management Section -->
            <section id="menu-section" class="admin-section" style="display: none;">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-utensils"></i>
                        จัดการเมนู
                    </h1>
                    <div class="header-actions">
                        <button class="btn btn-secondary" id="manageCategoriesBtn">
                            <i class="fas fa-tags"></i>
                            จัดการหมวดหมู่
                        </button>
                        <button class="btn btn-primary" id="addMenuBtn">
                            <i class="fas fa-plus"></i>
                            เพิ่มเมนูใหม่
                        </button>
                    </div>
                </div>
                
                <div class="content-area">
                    <div id="menu-content">
                        <!-- Menu content will be loaded here -->
                        <div class="loading-placeholder">
                            <i class="fas fa-spinner fa-spin"></i>
                            <p>กำลังโหลดข้อมูลเมนู...</p>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Bookings Management Section -->
            <section id="bookings-section" class="admin-section" style="display: none;">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-calendar-check"></i>
                        จัดการการจอง
                    </h1>
                    <div class="header-filters">
                        <select id="bookingStatusFilter" class="form-control">
                            <option value="">ทุกสถานะ</option>
                            <option value="pending">รอยืนยัน</option>
                            <option value="confirmed">ยืนยันแล้ว</option>
                            <option value="cancelled">ยกเลิก</option>
                        </select>
                        <input type="date" id="bookingDateFilter" class="form-control">
                    </div>
                </div>
                
                <div class="content-area">
                    <div id="bookings-content">
                        <!-- Bookings content will be loaded here -->
                        <div class="loading-placeholder">
                            <i class="fas fa-spinner fa-spin"></i>
                            <p>กำลังโหลดข้อมูลการจอง...</p>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Reports Section -->
            <section id="reports-section" class="admin-section" style="display: none;">
                <div class="section-header">
                    <h1>
                        <i class="fas fa-chart-bar"></i>
                        รายงานและสถิติ
                    </h1>
                    <div class="header-actions">
                        <select id="reportPeriod" class="form-control">
                            <option value="today">วันนี้</option>
                            <option value="week">สัปดาห์นี้</option>
                            <option value="month">เดือนนี้</option>
