                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-check-circle"></i>
                                    ยืนยันการจอง
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- My Bookings Tab -->
            <div class="tab-content" id="mybookingsTab">
                <div class="bookings-list" id="myBookingsList">
                    <div class="loading">
                        <div class="spinner"></div>
